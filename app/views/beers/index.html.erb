<h1>Beers</h1>

<table>
  <thead>
    <tr>
      <th> <%= link_to 'Name', beers_path(order:"name") %> </th>
      <th> <%= link_to 'Style', beers_path(order:"style") %> </th>
      <th> <%= link_to 'Brewery', beers_path(order:"brewery") %> </th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>    
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer, beer %></td>
        <td><%= beer.style %></td>
        <td><%= link_to beer.brewery, beer.brewery %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) if current_user %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } if current_is_admin %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
  <%= link_to('New Beer', new_beer_path) if current_user %>
  <br>
  <%= link_to 'List of Breweries', breweries_path %>
</p>
