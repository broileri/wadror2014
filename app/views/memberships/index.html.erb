<h1>Memberships</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Beer club</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= link_to membership.beer_club, membership.beer_club %></td>
        <td><%= link_to membership.user, membership.user %></td>
        <td><%= link_to 'Destroy', membership, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

