<%= form_for(@membership) do |f| %>
  <% if @membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@membership.errors.count, "error") %> prohibited this membership from being saved:</h2>

      <ul>
      <% @membership.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @beer_clubs.length > 0 %>
    <div class="field">
      <%= f.label :beer_club_id %><br>
      <%= f.select :beer_club_id, options_from_collection_for_select(@beer_clubs, :id, :to_s) %>
    </div>
    <div class="actions">
      <%= f.submit class:"btn btn-primary" %>
    </div>
  <% else %>
    <p class="alert alert-success">
      You're already a member in all available clubs!
    </p>
  <% end %>
  
<% end %>
