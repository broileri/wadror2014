<table class="table table-hover">
  <thead>
  <tr>
    <th>Beer</th>
    <th>Average Score</th>
    <th>Ratings Count</th>
  </tr>
  </thead>

  <tbody>
  <% beers.each do |beer| %>
      <tr>
        <td><%= link_to beer, beer %></td>        
        <td><%= round(beer.average_rating) %></td>
        <td><%= beer.ratings.count %></td>
      </tr>
  <% end %>
  </tbody>
</table>