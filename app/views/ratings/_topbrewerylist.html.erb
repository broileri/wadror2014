<table class="table table-hover">
  <thead>
  <tr>
    <th><%= link_to 'Name', breweries_path(order:"name") %></th>
    <th><%= link_to 'Average Score', breweries_path(order:"year") %></th>
    <th>Ratings Count</th>
  </tr>
  </thead>

  <tbody>
  <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.average_rating %></td>
        <td><%= brewery.ratings.count %></td>
      </tr>
  <% end %>
  </tbody>
</table>